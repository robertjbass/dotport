{
  "name": "dev-machine-backup-restore",
  "version": "1.0.0",
  "description": "A lightweight tool that snapshots and restores your entire system configuration and dotfiles, making new-machine setup fast, consistent, and painless",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "script": "tsx scripts/index.ts",
    "script:init": "pnpm run script init",
    "script:populate-backup-schema": "pnpm run script populate-backup-schema",
    "script:setup": "pnpm run script setup",
    "setup": "pnpm run script:setup",
    "test": "node --test --experimental-strip-types tests/*.test.ts",
    "test:secret-scanner": "node --test --experimental-strip-types tests/secret-scanner.test.ts",
    "test:dry-run": "node --test --experimental-strip-types tests/dry-run.test.ts",
    "test:watch": "node --test --watch --experimental-strip-types tests/*.test.ts"
  },
  "keywords": [],
  "author": "Bob Bass",
  "license": "ISC",
  "packageManager": "pnpm@10.20.0",
  "devDependencies": {
    "@types/node": "^24.10.1",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6"
  },
  "dependencies": {
    "@octokit/rest": "^22.0.1",
    "@types/cli-progress": "^3.11.6",
    "@types/diff": "^8.0.0",
    "@types/inquirer": "^9.0.9",
    "chalk": "^5.6.2",
    "cli-progress": "^3.12.0",
    "diff": "^8.0.2",
    "inquirer": "^12.11.0",
    "simple-git": "^3.30.0"
  }
}
