  "secretPatterns": {
    "description": "Patterns to detect secrets in files (used by secret scanner)",
    "patterns": [
      {
        "name": "API Keys",
        "regex": "(api[_-]?key|apikey)[\\s]*[=:][\\s]*['\"]?[a-zA-Z0-9_\\-]{20,}['\"]?",
        "severity": "high"
      },
      {
        "name": "Secret Keys",
        "regex": "(secret[_-]?key|secretkey)[\\s]*[=:][\\s]*['\"]?[a-zA-Z0-9_\\-]{20,}['\"]?",
        "severity": "high"
      },
      {
        "name": "Tokens",
        "regex": "(token|access[_-]?token)[\\s]*[=:][\\s]*['\"]?[a-zA-Z0-9_\\-]{20,}['\"]?",
        "severity": "high"
      },
      {
        "name": "Passwords",
        "regex": "(password|passwd|pwd)[\\s]*[=:][\\s]*['\"]?[^\\s'\"]{8,}['\"]?",
        "severity": "critical"
      },
      {
        "name": "AWS Access Key",
        "regex": "AKIA[0-9A-Z]{16}",
        "severity": "critical"
      },
      {
        "name": "GitHub Token",
        "regex": "ghp_[a-zA-Z0-9]{36}",
        "severity": "critical"
      },
      {
        "name": "Private Keys",
        "regex": "-----BEGIN (RSA |EC |OPENSSH )?PRIVATE KEY-----",
        "severity": "critical"
      },
      {
        "name": "Database URLs",
        "regex": "(postgres|mysql|mongodb)://[^\\s'\"]+:[^\\s'\"]+@",
        "severity": "high"
      }
    ]
  }
